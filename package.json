{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "npx prisma reset && npx prisma migrate deploy && npm run build:css && remix build",
    "dev": "concurrently \"npm run dev:css\" \"remix dev\"",
    "build:css": "tailwindcss -o ./app/styles/tailwind.css",
    "dev:css": "tailwindcss -o ./app/styles/tailwind.css --watch",
    "start": "remix-serve build",
    "css": "tailwindcss -w -i app/styles/input.css -o app/styles/tailwind.css --watch",
    "migrate": "npx prisma migrate dev --name",
    "format": "npx prisma format"
  },
  "dependencies": {
    "@headlessui/react": "^1.6.5",
    "@heroicons/react": "^1.0.6",
    "@prisma/client": "^3.15.2",
    "@remix-run/node": "^1.6.3",
    "@remix-run/react": "^1.6.3",
    "@remix-run/serve": "^1.5.1",
    "@remix-run/vercel": "^1.6.3",
    "@sendgrid/mail": "^7.7.0",
    "@tailwindcss/forms": "^0.5.2",
    "@vercel/node": "^1.15.2",
    "autoprefixer": "^10.4.7",
    "bcryptjs": "^2.4.3",
    "clsx": "^1.1.1",
    "focus-visible": "^5.2.0",
    "formik": "^2.2.9",
    "postcss-focus-visible": "^6.0.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.3.0",
    "tailwindcss": "^3.1.3",
    "uuid": "^8.3.2",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.5.1",
    "@remix-run/eslint-config": "^1.5.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/node": "^17.0.42",
    "@types/react": "^17.0.45",
    "@types/react-dom": "^17.0.17",
    "@types/uuid": "^8.3.4",
    "autoprefixer": "^10.4.7",
    "concurrently": "^7.2.1",
    "eslint": "^8.15.0",
    "postcss": "^8.4.14",
    "prisma": "^3.15.2",
    "tailwindcss": "^3.1.2",
    "typescript": "^4.6.4"
  },
  "engines": {
    "node": ">=14"
  }
}
